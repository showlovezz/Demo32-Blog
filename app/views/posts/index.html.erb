<section id="section_posts">
  <div class="container">
    <div class="row">
      <div class="col-md-10 offset-md-1">
        <% @posts.each do |post| %>
          <div class="list-group mb-4">
            <%= link_to post_path(post), class: "list-group-item list-group-item-action flex-column align-items-start bg-info" do %>
              <div class="d-flex w-100 justify-content-between">
                <h2 class="mb-1"><%= post.title %></h2>
                <small><%= time_ago_in_words(post.created_at) %> ago -</small>
              </div>
              <p class="mb-1"><%= truncate(post.body, length: 300) %></p>
              <small>Donec id elit non mi porta.</small>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

