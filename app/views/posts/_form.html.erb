<%= form_for @post do |f| %>

  <% if @post.errors.any? %>
    <h2>We have some errors here !</h2>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>

  <%= f.label :body, "Body" %>
  <%= f.text_area :body %>

  <%= f.submit %>
<% end %>